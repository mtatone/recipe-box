= if @recipe.errors.any?
  %p.errors
    %h3 =@recipe.errors.count Prevented this recipe from saving
    %ul 
      = @recipe.errors.each do |error|
        %li error

=simple_form_for @recipe do |f|
  %p.body
    = f.input :title
    %br
    = f.input :description
    = f.input :image, as: :file
    - if @recipe.image.attached?
      .image-small{style: "background-image: url('#{rails_blob_url(@recipe.image)}');"}
  %br
  %br
  = f.button :submit
