!!! 5

-if @recipe.errors.any?
  %p.errors
    %h3 #{@recipe.errors.count} Error(s) prevented this recipe from saving
    %ul
      - @recipe.errors.full_messages.each do |error|
        %li #{error}

=simple_form_for @recipe do |f|
  %p.body
    = f.input :title
    %br
    = f.input :description
    = f.input :image, as: :file
    -if @recipe.image.attached?
      .image-small{style: "background-image: url('#{rails_blob_url(@recipe.image)}');"}
  %br
  %br
  = f.button :submit
